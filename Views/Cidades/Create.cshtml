@model Aiury.ViewModels.CidadeViewModel
@{
    ViewData["Title"] = "Nova Cidade";
}
<h1>Nova Cidade</h1>
<form method="post" asp-action="Create">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">
        <div class="col-md-8">
            <label asp-for="NomeCidade" class="form-label"></label>
            <input asp-for="NomeCidade" class="form-control" />
            <span asp-validation-for="NomeCidade" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="IdEstado" class="form-label"></label>
            <input asp-for="IdEstado" class="form-control" />
            <span asp-validation-for="IdEstado" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
